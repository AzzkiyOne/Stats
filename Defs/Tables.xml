<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <Stats.TableDef>
        <defName>All</defName>
        <label>all</label>
        <columns>
            <li>
                <def>MaxHitPoints</def>
            </li>
            <li>
                <def>MarketValue</def>
            </li>
        </columns>
    </Stats.TableDef>

    <Stats.TableDef>
        <defName>Weapons</defName>
        <label>weapons</label>
        <filter>Stats.ThingProps.IsWeapon</filter>
        <columns>
            <li>
                <def>MaxHitPoints</def>
            </li>
            <li>
                <def>MarketValue</def>
            </li>
        </columns>
    </Stats.TableDef>

    <Stats.TableDef>
        <defName>WeaponsRanged</defName>
        <label>ranged</label>
        <parent>Weapons</parent>
        <filter>Stats.ThingProps.IsRangedWeapon</filter>
        <columns>
            <li>
                <def>WeaponRangedDamage</def>
                <order>0</order>
            </li>
            <li>
                <def>WeaponRangedStoppingPower</def>
                <order>0</order>
            </li>
            <li>
                <def>WeaponRangedAP</def>
                <order>0</order>
            </li>
            <li>
                <def>WeaponRangedRPM</def>
                <order>0</order>
            </li>
            <li>
                <def>WeaponRangedBurstShotCount</def>
                <order>0</order>
            </li>
            <li>
                <def>WeaponRange</def>
                <order>0</order>
            </li>
            <li>
                <def>AccuracyTouch</def>
                <order>100</order>
            </li>
            <li>
                <def>AccuracyShort</def>
                <order>200</order>
            </li>
            <li>
                <def>AccuracyMedium</def>
                <order>300</order>
            </li>
            <li>
                <def>AccuracyLong</def>
                <order>400</order>
            </li>
            <li>
                <def>RangedWeapon_Cooldown</def>
                <order>500</order>
            </li>
            <li>
                <def>WeaponRangedAimingTime</def>
                <order>600</order>
            </li>
            <li>
                <def>MaxHitPoints</def>
            </li>
            <li>
                <def>MarketValue</def>
            </li>
        </columns>
    </Stats.TableDef>

    <Stats.TableDef>
        <defName>WeaponsMelee</defName>
        <label>melee</label>
        <parent>Weapons</parent>
        <filter>Stats.ThingProps.IsMeleeWeapon</filter>
        <columns>
            <li>
                <def>MaxHitPoints</def>
            </li>
            <li>
                <def>MarketValue</def>
            </li>
        </columns>
    </Stats.TableDef>

</Defs>
