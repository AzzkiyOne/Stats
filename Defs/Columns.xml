<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <Stats.LabelColumnDef>
        <defName>Label</defName>
        <label>name</label>
        <minWidth>250</minWidth>
        <type>String</type>
        <isPinned>true</isPinned>
    </Stats.LabelColumnDef>

    <Stats.StatColumnDef>
        <defName>MaxHitPoints</defName>
        <label>max HP</label>
    </Stats.StatColumnDef>

    <Stats.StatColumnDef>
        <defName>Mass</defName>
        <reverseDiffModeColors>true</reverseDiffModeColors>
        <minWidth>100</minWidth>
    </Stats.StatColumnDef>

    <Stats.StatColumnDef>
        <defName>MarketValue</defName>
        <label>$$$</label>
    </Stats.StatColumnDef>

    <Stats.WeaponRangeColumnDef>
        <defName>WeaponRange</defName>
    </Stats.WeaponRangeColumnDef>

    <!-- Column sets -->

    <Stats.ColumnSetDef>
        <defName>Root</defName>
        <categories>
            <li>Root</li>
        </categories>
        <columns>
            <li>Label</li>
            <li>MaxHitPoints</li>
            <li>MarketValue</li>
            <li>Mass</li>
        </columns>
    </Stats.ColumnSetDef>

    <Stats.ColumnSetDef>
        <defName>WeaponsRanged</defName>
        <categories>
            <li>WeaponsRanged</li>
        </categories>
        <columns>
            <li>Label</li>
            <li>WeaponRange</li>
            <!-- CE Start -->
            <li>Recoil</li>
            <li>SwayFactor</li>
            <li>ShotSpread</li>
            <li>SightsEfficiency</li>
            <li>MagazineCapacity</li>
            <li>ReloadTime</li>
            <li>TicksBetweenBurstShots</li>
            <li>Caliber</li>
            <li>OneHandedness</li>
            <li>Bulk</li>
            <!-- CE End -->
            <li>Mass</li>
        </columns>
    </Stats.ColumnSetDef>

</Defs>
