<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/StatDef[defName="ReloadTime"]</xpath>
        <value>
            <formatString>{0} s</formatString>
            <toStringStyle>FloatTwo</toStringStyle>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="ShotSpread"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <diffMult>-1</diffMult>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="SwayFactor"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <label>sway</label>
                <diffMult>-1</diffMult>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="Recoil"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <label>recoil</label>
                <diffMult>-1</diffMult>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="SightsEfficiency"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <label>sights</label>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="MagazineCapacity"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <label>mag. cap</label>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="OneHandedness"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <label>one-handed</label>
                <type>Boolean</type>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/StatDef[defName="Caliber"]</xpath>
        <value>
            <li Class="Stats.StatDefExtension">
                <type>String</type>
                <minWidth>175</minWidth>
            </li>
        </value>
    </Operation>

</Patch>