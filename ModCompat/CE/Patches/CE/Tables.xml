<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationInsert">
        <xpath>Defs/Stats.TableDef/columns/li[text() = "Mass"]</xpath>
        <value>
            <li>CE_Bulk</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/Stats.TableDef[defName="RangedWeapons"]/columns/li[text() = "WeaponRanged_Damage"]</xpath>
        <value>
            <li>CE_WeaponRanged_Caliber</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationInsert">
        <xpath>Defs/Stats.TableDef[defName="RangedWeapons"]/columns/li[text() = "WeaponRanged_Range"]</xpath>
        <order>Append</order>
        <value>
            <li>CE_WeaponRanged_OneHandedness</li>
            <li>CE_WeaponRanged_ReloadTime</li>
            <li>CE_WeaponRanged_MagazineCapacity</li>
            <li>CE_WeaponRanged_SightsEfficiency</li>
            <li>CE_WeaponRanged_Recoil</li>
            <li>CE_WeaponRanged_SwayFactor</li>
            <li>CE_WeaponRanged_ShotSpread</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/Stats.TableDef[defName="RangedWeapons"]/columns/
        li[ text()="WeaponRanged_StoppingPower"
            or text()="WeaponRanged_ArmorPenetration"
            or text()="WeaponRanged_AccuracyTouch"
            or text()="WeaponRanged_AccuracyShort"
            or text()="WeaponRanged_AccuracyMedium"
            or text()="WeaponRanged_AccuracyLong"
            or text()="WeaponRanged_DirectHitChance"
            or text()="WeaponRanged_MissRadius"
            or text()="WeaponMelee_DPS"
            or text()="WeaponMelee_ArmorPenetration"
        ]</xpath>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/Stats.TableDef[defName="MeleeWeapons"]/columns/li[text()="WeaponMelee_ArmorPenetration"]</xpath>
    </Operation>

    <Operation Class="PatchOperationInsert">
        <xpath>Defs/Stats.TableDef/columns/li[text()="Apparel_ArmorRating_Heat"]</xpath>
        <order>Append</order>
        <value>
            <li>CE_Apparel_ArmorRating_Electric</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationInsert">
        <xpath>Defs/Stats.TableDef[defName="Clothing" or defName="Armor" or defName="UtilityApparel"]/columns/li[text()="CE_Bulk"]</xpath>
        <value>
            <li>CE_Apparel_Worn_Bulk</li>
        </value>
    </Operation>

</Patch>
